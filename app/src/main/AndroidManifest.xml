<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.collegecommapp">


    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:roundIcon="@drawable/logo"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.CollegeCommApp"
       >

        <activity android:name=".auth.Login" android:theme="@style/Theme.CollegeCommApp"/>

        <activity android:name=".auth.CodeVerification"/>
        <activity android:name=".MainActivity" />


        <activity android:name=".auth.Register">
        </activity>
        <activity
            android:name=".auth.SplashScreen"
            android:theme="@style/Theme.CollegeCommApp"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>



    </application>

</manifest>